.slider{
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.slider figure{
    display: flex;
    width: 500%; /* 5 images */
    margin: 0;
    padding: 0;
}

/* Only on hover we apply animation */
.slider:hover figure{
    animation: slider 6s ease-in-out infinite;
}

.slider figure img{
    width: 20%;
    height: 100%;
    object-fit:fill;
}

@keyframes slider {
    0% { margin-left: 0; }
    20% { margin-left: -100%; }
    40% { margin-left: -200%; }
    60% { margin-left: -300%; }
    80% { margin-left: -400%; }
    100% { margin-left: 0; }
}

    </style>

    
